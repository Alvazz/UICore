<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DslProgressBar">
        <attr name="progress_bg_drawable" format="reference|color" />
        <attr name="progress_second_drawable" format="reference|color" />
        <attr name="progress_track_drawable" format="reference|color" />

        <!--多个色值用,隔开-->
        <attr name="progress_bg_gradient_colors" format="string|color" />
        <attr name="progress_track_gradient_colors" format="string|color" />
        <attr name="progress_second_gradient_colors" format="string|color" />

        <!--圆角大小-->
        <attr name="progress_radius" format="dimension" />
        <attr name="progress_max_value" format="integer" />
        <attr name="progress_value" format="integer" />
        <attr name="progress_second_value" format="integer" />

        <!--提示文本-->
        <attr name="progress_show_text" format="boolean" />
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_min_width" format="dimension" />
        <attr name="progress_text_offset" format="dimension" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_format" format="string" />

    </declare-styleable>
</resources>