<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media_progress_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/media_progress_bg_shape"
    android:paddingLeft="@dimen/lib_xhdpi"
    android:paddingRight="@dimen/lib_xhdpi">

    <com.angcyo.widget.text.DslTextView
        android:id="@+id/left_text_view"
        style="@style/LibBodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/lib_white"
        tools:text="00:10" />

    <com.angcyo.widget.text.DslTextView
        android:id="@+id/right_text_view"
        style="@style/LibBodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:textColor="@color/lib_white"
        tools:text="00:10" />

    <com.angcyo.widget.progress.DslSeekBar
        android:id="@+id/lib_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        app:progress_bg_gradient_colors="@color/lib_progress_bg_color"
        app:progress_value="0" />

</FrameLayout>