<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_primary_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.angcyo.widget.text.DslTextView
            android:id="@+id/dialog_input_tip_view"
            style="@style/LibTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:padding="@dimen/lib_xhdpi"
            android:visibility="gone"
            tools:text="测试文本"
            tools:visibility="visible" />

        <com.angcyo.widget.DslButton
            android:id="@+id/dialog_save_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="@dimen/lib_hdpi"
            android:layout_marginRight="@dimen/lib_xhdpi"
            android:layout_marginBottom="@dimen/lib_hdpi"
            android:text="确定" />

    </FrameLayout>

    <com.angcyo.widget.edit.DslEditText
        android:id="@+id/dialog_edit_text_view"
        style="@style/LibBodyTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lib_white"
        android:imeOptions="actionDone"
        android:maxHeight="200dp"
        android:minHeight="@dimen/lib_item_min_height"
        android:padding="@dimen/lib_xhdpi"
        tools:hint="请输入内容"
        tools:layout_height="300dp" />

    <com.angcyo.widget.pager.TextIndicator
        android:id="@+id/dialog_single_text_indicator_view"
        style="@style/LibSubTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/lib_ldpi"
        android:layout_marginRight="@dimen/lib_xhdpi"
        android:textSize="@dimen/text_assist_size"
        android:visibility="invisible"
        tools:text="100/100"
        tools:visibility="visible" />

</LinearLayout>